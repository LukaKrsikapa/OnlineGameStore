@model Order

<div class="tableContainer" style="padding:10px">
    <form class="row g-3" asp-action="Checkout" method="post" role="form">

        <h1>Your order is almost ready!</h1>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-12">
            <label class="form-label">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="First Name">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label" for="LastName">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Last Name">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label" for="Address">Address</label>
            <input asp-for="Address" type="text" class="form-control" id="Address" placeholder="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label" for="Country">Country</label>
            <input asp-for="Country" type="text" class="form-control" id="Country" placeholder="Country">
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label" for="City">City</label>
            <input asp-for="City" type="text" class="form-control" id="City" placeholder="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" for="ZipCode">Zip</label>
            <input asp-for="ZipCode" type="text" class="form-control" id="ZipCode" placeholder="Zip">
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" for="PhoneNumber">PhoneNumber</label>
            <input asp-for="PhoneNumber" type="tel" class="form-control" id="PhoneNumber" placeholder="Phone Number">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-success" value="Complete order">Submit</button>
        </div>
    </form>
</div>
