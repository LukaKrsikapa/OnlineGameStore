                            <a class="navBtnMargin btn btn-dark rounded-pill px-3" style="color: #ff6d00;" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li>
                            <form class="d-flex" asp-controller="Game" asp-action="List">
                                <select class="form-select navbarSearch" aria-label="Default select example" name="genreId">
                                    <option value="0" selected>All Games</option>
                                    <option value="1">Survival</option>
                                    <option value="2">Fighter</option>
                                    <option value="3">Racing</option>
                                    <option value="4">Adventure</option>
                                    <option value="5">Sport</option>
                                    <option value="6">RPG</option>
                                </select>

                                <input class="form-control me-2 navbarSearch" type="search" placeholder="Search for games" name="search" aria-label="search">
                                <button class="btn btn-success" type="submit">Search</button>
                            </form>
                        </li>
                        <partial name="_LoginPartial"/>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="navBtnMargin btn btn-dark rounded-pill px-3" style="color: #ff6d00;" asp-area="" asp-controller="Home" asp-action="AdminPage">Secret Admin Button</a>
                            </li>
                        }
                    </ul>
                    <a class="btn btn-dark fLeft redText" asp-controller="ShoppingCart" asp-action="Index">
