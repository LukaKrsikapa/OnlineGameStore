                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navBtnMargin btn btn-dark rounded-pill px-3" style="color: #ff6d00;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
