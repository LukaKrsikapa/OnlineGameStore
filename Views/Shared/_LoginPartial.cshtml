@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="navBtnMargin btn btn-dark rounded-pill px-3" style="color: #ff6d00;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="navBtnMargin btn btn-dark rounded-pill px-3" style="color: #ff6d00;">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="navBtnMargin btn btn-dark rounded-pill px-3" style="color: #ff6d00;" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="navBtnMargin btn btn-dark rounded-pill px-3" id="login" style="color: #ff6d00;" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
